{
  "framework": "mocha",
  "src_files": [
    "node_modules/chai/chai.js",
    "node_modules/sinon/pkg/sinon.js",
    "vendor/*",
    "lib/*",
    "testing/setup.js",
    "testing/*.test.js"
  ],
  "launchers": {
    "node": {
      "command": "./node_modules/.bin/mocha -r testing/setup.js -R tap testing/*.test.js",
      "protocol": "tap"
    }
  },
  "launch_in_dev": [
    "node"
  ]
}
